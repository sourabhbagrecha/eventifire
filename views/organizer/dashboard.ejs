<%- include ../partials/head.ejs %>
<%- include ../partials/header.ejs %>
<%const MONTHIFY = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']%>
<div class="container">
  <a href="/organizer/new" class="btn btn-success btn-lg btn-block">Create an Event</a>
  <% if(events){ %>
  <div class="row mt-5">
    <% events.forEach(e => { %>
      <% const date = new Date(e.dateAndTime) %>
        <div class="col-md-4 mt-2">
            <div class="container bg-light">
              <h3><%= e.name %></h3>
              <img class="rounded mb-2" src="<%= e.poster %>" style="width: 100%;" alt="<%= e.name %>">
              <%= MONTHIFY[date.getMonth()] %> <%= date.getDate() %>, <%= date.getYear()+1900 %>
              <a href="/event/<%= e._id %>"><div class="btn btn-primary">View</div></a>
              <a href="/organizer/edit/<%= e._id %>"><div class="btn btn-success">Edit</div></a>
              <form class="d-inline" action='/organizer/delete/<%= e._id%>' method="POST">
                <button class="btn btn-danger" type="submit">Delete</button>
              </form>
            </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
<%- include ../partials/footer.ejs %>
