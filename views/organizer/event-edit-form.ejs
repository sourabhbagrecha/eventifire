<%- include ../partials/head.ejs %>
<%- include ../partials/header.ejs %>
<div class="container">
  <form action="/organizer/edit/<%= event._id %>" method="post">
    <div class="container bg-light rounded" style="max-width: 40rem;">
      <h1>Create Your Event Here</h1><hr>
      <div class="form-group">
          <h3>Name:</h3>
          <input name="name" value="<%= event.name %>" type="text" class="form-control" placeholder="Choose an exciting name for your event" required>
        </div>
        <div class="form-row">
          <h3>Location:</h3>
          <div class="form-group col-12">
            <input name="address" value="<%= event.address %>" type="text" class="form-control" placeholder="Address" required>
          </div>
          <div class="form-group col-md-6">
            <input name="city" value="<%= event.city %>" type="text" class="form-control" placeholder="City" required>
          </div>
          <div class="form-group col-md-6">
            <input name="state" value="<%= event.state %>" type="text" class="form-control" placeholder="State" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <h3>Date:</h3>
            <input type="date" value="<%= event.dateAndTime[0] %>" name="date" class="form-control" required>
          </div>
          <div class="form-group col-md-6">
            <h3>Time:<span style="font-size: 0.9rem"> (Format: 09:00 PM)</span></h3>
            <input type="time" value="<%= event.dateAndTime[1] %>" name="date" class="form-control" required>
          </div>
        </div>
        <div class="form-group">
          <h3>Poster:</h3>
          <input name="poster" value="<%= event.poster %>" type="url" class="form-control" placeholder="Enter the image url for the event.">
        </div>
        <div class="form-group">
          <h3>Description:</h3>
          <textarea name="description" cols="30" rows="10" class="form-control" placeholder="Describe your event in detail." required><%= event.description %></textarea>
        </div>
        <div class="form-group">
          <h3>Entry Fees:</h3>
          <input name="fees" value="<%= event.fees %>" type="number" class="form-control" placeholder="in Rupees" required>
        </div>
        <div class="form-group">
          <input type="submit" value="Submit" class="form-control btn btn-block btn-primary">
        </div>
    </div>
  </form>
</div>
<%- include ../partials/footer.ejs %>
